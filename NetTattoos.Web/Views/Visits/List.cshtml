@{
    ViewData["Title"] = "Wizyty";
}

@model List<NetTattoos.Web.Models.Entities.Visit>

<br>
<div class="d-flex flex-column align-items-center text-center pb-5">
    <h1 class="py-3">Zapraszamy do nas!</h1>
    <p class ="pb-3">Tribal, rękaw, a może chcesz się pozbyć tatuażu po drugiej połówce?<br />Nie zwlekaj i zapisz się na wizytę już teraz!</p>
    <a class="btn btn-primary" href="/Visits/Add">Umów się na wizytę</a>
</div>
<div class="d-flex flex-column text-center pb-3">
    <h2 class="py-2">Lista wizyt</h2>
</div>
<table class="table table-sm text-center align-middle table-striped table-bordered">
    <thead>
        <tr class="table-dark">
            <th>ID</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Temat wizyty</th>
            <th>Termin wizyty</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visit in Model)
        {
            <tr>
                <td>@visit.Id</td>
                <td>@visit.Name</td>
                <td>@visit.Surname</td>
                <td>@visit.Email</td>
                <td>@visit.Visit_type</td>
                <td>@visit.Visit_date</td>
                <td>
                    <a class="btn btn-primary btm-sm" asp-controller="Visits" asp-action="Edit" asp-route-id="@visit.Id">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>